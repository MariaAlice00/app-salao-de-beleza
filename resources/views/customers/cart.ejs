<section class="cart py-16">
    <% if(session.cart) { %>
    <div class="order container mx-auto xl:w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/cart-black.png" alt="">
            <h1 class="font-bold ml-4 text-2xl">Resumo do pedido</h1>
        </div>
        <div class="service-list">
            <% for(let service of Object.values(session.cart.items)) { %>
                <div class="flex items-center my-8">
                    <img class="w-24" src="/img/<%= service.item.image %>" alt="">
                    <div class="flex-1 ml-4">
                        <h1><%= service.item.name %></h1>
                    </div>
                    <span class="flex-1"><%= service.qty %> qtd</span>
                    <span class="font-bold text-lg">R$<%= service.item.price * service.qty %></span>
                </div>
            <% } %>
        </div>

        <hr>
        
        <div class="text-right py-4">
            <div>
                <span class="text-lg font-bold">Total:</span>
                <span class="amount text-2xl font-bold ml-2">R$<%= session.cart.totalPrice %></span>
            </div>
            <% if(user) { %>
            <div>
                <form action="/orders" class="mt-12">
                    <input class="border border-gray-400 p-2 w-1/2 mb-4" type="text" name="phone" id="phone" placeholder="NÃºmero de telefone">
                    <input class="border border-gray-400 p-2 w-1/2" type="text" name="address" id="address" placeholder="EndereÃ§o">
                    <div>
                        <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6" type="submit">Comprar</button>
                    </div>
                </form>
            </div>
            <% } else { %>
            <a href="" class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Login para continuar</a>
            <% } %>
        </div>
    </div>

    <% } else { %>
    <div class="empty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2">Carrinho Vazio ðŸ˜•</h1>
            <p class="text-gray-500 text-lg mb-12">
                VocÃª provavelmente ainda nÃ£o pediu uma serviÃ§o.
                <br>
                Para pedir, vÃ¡ para a pÃ¡gina principal.
            </p>
            <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart">
            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Voltar</a>
        </div>
    </div>
    <% } %>
</section>